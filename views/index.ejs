              </div>
          <% } %>
          <% include templates/register %>
          <% include templates/login %>
          <div class="col-12 btn-group" role="group">
            <div class="col-6 btn btn-dark register">Register</div>
            <div class="col-6 btn btn-dark login">Sign in</div>
          </div>
          
        </div>

      </div>
      </div>
      
    </div>
    <% include templates/footer %>