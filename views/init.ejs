<% include templates/head %>
  <body class='container-fluid d-flex flex-column'>
    <button id="logout" class="btn btn-default">logout</button>
    

    <div class="wrapper container p-2 flex-fill d-flex align-items-center">
    <!-- upload profile picture -->
      <div class="container uploadBody">
        <div class="row">
          <div class="intro col-12 text-center p-4 my-4">
            <h1>Please complete your profile</h1>
            <p class="greyText">Welcome and thank you for joining us! <i class="fa fa-heart"></i></p>
          </div>
          <div class="col-12">
              <h2 class="text-center">Upload profile pic</h2>
              <form id='profilePic' enctype="multipart/form-data">
                  <input type="test" name="title" value="helloTitle">
                  <input type="file" name="picUpload" id="profile" required>
                  <input type="submit" class="btn btn-dark uploadBtn" value="Upload">
              </form>
              <div class="col-12 py-4">
                  <div class="row">
                    <div class="col-6 text-center selectPic p-2">Choose picture...</div>
                    <div class="col-6 btn btn-dark upload">Upload</div>

                  </div>
              </div>
          </div>
          <div class="col-12 pb-4">
            <div class="col-sm-6 m-auto">
            <div class="m-auto w-300 imagePreview picture"></div>
            </div>
          </div>
          <div class="col-6 m-auto btn btn-dark my-4 nextButton" data-from="uploadBody">Next</div>
          <div class="col-12 text-center py-4">
            <h4>1 OF 3</h4>
          </div>
         
        </div>

      </div>
    <!-- more about yourself -->
      <div class="container aboutBody">
        <div class="row">
          <div class="intro col-12 text-center p-4 my-4">
            <h1>Please complete your profile</h1>
            <p class="greyText">Welcome and thank you for joining us! <i class="fa fa-heart"></i></p>
          </div>
           <div class="col-12">
              <h2 class="text-center">Tell us about yourself!</h2>
              <form class="py-4" id="aboutForm">
                <div class="form-group">
                  <label for="sexuality">Sexuality *</label>
                  <select class="form-control" name='sexuality' id="sexuality" required>
                    <option value="">- Select one -</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="interests">Interests *</label>
                  <select class="form-control" name='interests' id="interests" required>
                    <option value="">- Select one -</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                  </select>
                </div>
                <input type="hidden" name="pic" id="pic">

 
              <fieldset class="form-group">
                <div class="row">
                  <legend class="col-form-label col-sm-2 pt-0">Gender *</legend>
                  <div class="col-sm-10">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="gender" id="male" value="male" required>
                      <label class="form-check-label" for="male">
                        Male
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="gender" id="female" value="female" required>
                      <label class="form-check-label" for="female">
                        Female
                      </label>
                    </div>
                  </div>
                </div>
              </fieldset>
              <div class="form-group">
                  <label for="birthDate">Date of Birth *</label>
                  <input type="date" class="form-control" id="birthDate" name='birthDate' required>
                </div>
              <div class="form-group">
                <label for="bio">Bio *</label>
                <textarea class="form-control" name="bio" id="bio" rows="3" required></textarea>
              </div>
              <div class="form-group row">
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
            </form>
          </div>
          <div class="col-12 text-center py-4">
            <h4>2 OF 2</h4>
          </div>
        </div>
      </div>

      
    </div>
  <% include templates/footer %>