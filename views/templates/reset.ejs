<div class="col-12 col-md-6 m-auto py-4 px-2">
            <form id='renewPasswordForm' method="POST">
                 <% if (locals.email && locals.key) { %>
                    <input type="hidden" name="email" value=<%= email %>>
                    <input type="hidden" name="key" value=<%= key %>>
                <% } %>
              
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-key"></i></span>
                </div>
                <input type="password" class="form-control tranparent validPassword-register" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" maxlength="30" placeholder="password *" name="password" aria-describedby="password" required>
              </div>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-key"></i></span>
                </div>
                <input type="password" class="form-control tranparent validPassword-register" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" maxlength="30" placeholder="Confirm password *" name="confirmPassword" aria-describedby="ConfirmPassword" required>
              </div>
              <input type='submit' value='Reset' class="btn btn-dark">
            </form>
          </div>

          <button type="button" class="btn btn-primary registerStatusButton" data-toggle="modal" data-target=".registerStatus">Large modal</button>

        <div class="modal fade registerStatus" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content tranparent border-0">
              <div class="row">
                <div class="col-12 status text-center"></div>
              </div>
            </div>
          </div>
        </div>