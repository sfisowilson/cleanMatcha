                        <div class="col-6 text-right"><strong><%= userDetailes.sexuality %></strong></div>
                        <div class="underline col-12 pt-1 pb-2"></div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center"><h4>Bio:</h4></div>
                        <div class="col-12 text-center"><strong><%= userDetailes.bio %></strong></div>
                        <div class="underline col-12 pt-1 pb-2"></div>
                    </div>
                <% } %>
            </div>
            <div class="col-md-4 profileBoard">
                    
                    <div class="col-12 my-4 text-center"><h3>User Stats</h3></div>
                    <div class="row">
                        <div class="col-6 text-left"><strong>rating:</strong></div>
                        <div class="col-6 text-right"><strong>7/10</strong></div>
                        <div class="underline col-12 pt-1 pb-2"></div>
                    </div>
                    <div class="row">
