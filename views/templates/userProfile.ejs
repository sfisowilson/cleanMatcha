<div class="suggestions col-12">
    <div class="row">
            <div class="col-md-4 profileBoard">
                <div class="row px-4">
                    <div class="col-12 text-center my-4">
                        <h3>Gallery</h3>
                    </div>
                    <div class="col-6 picThumb" style="background:url(<%=userDetailes.pic%>)"></div>
                    <div class="col-6 picThumb" style="background:url(<%=userDetailes.pic%>)"></div>
